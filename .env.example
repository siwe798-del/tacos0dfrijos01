# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================

# URL completa de conexión a PostgreSQL
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_bd
# Ejemplo: postgresql://postgres:password123@localhost:5432/nemesis_db
DATABASE_URL=postgresql://usuario:contraseña@host:puerto/base_de_datos

# Configuración individual de base de datos (alternativa a DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=tu_contraseña
DB_NAME=nemesis_phishing

# =============================================================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# =============================================================================

# Clave secreta para sesiones (genera una cadena aleatoria larga)
SESSION_SECRET=tu_clave_secreta_muy_larga_y_segura_aqui

# Configuración de Replit Auth (si usas Replit)
REPL_ID=tu_repl_id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=tu-dominio.replit.app

# =============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =============================================================================

# Entorno de ejecución
NODE_ENV=development

# Puerto de la aplicación
PORT=5000

# URL base de la aplicación
APP_URL=http://localhost:5000

# =============================================================================
# CONFIGURACIÓN DE NOTIFICACIONES (OPCIONAL)
# =============================================================================

# Telegram Bot (para notificaciones)
TELEGRAM_BOT_TOKEN=tu_bot_token_de_telegram
TELEGRAM_CHAT_ID=tu_chat_id

# Webhook URL (para notificaciones externas)
WEBHOOK_URL=https://tu-webhook.com/notify

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Dominios permitidos para CORS
ALLOWED_ORIGINS=http://localhost:3000,https://tu-dominio.com

# Clave de cifrado para datos sensibles
ENCRYPTION_KEY=tu_clave_de_cifrado_32_caracteres

# =============================================================================
# CONFIGURACIÓN DE ARCHIVOS
# =============================================================================

# Directorio para archivos subidos
UPLOAD_DIR=./uploads

# Tamaño máximo de archivos (en bytes)
MAX_FILE_SIZE=10485760

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Archivo de logs
LOG_FILE=./logs/app.log